<Window x:Class="IDE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IDE"
        mc:Ignorable="d"
        Title="Pseudo IDE" Height="auto" Width="auto"
        ResizeMode="CanResize"
        WindowState="Maximized"
        Name="IDE">
    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" Name="gridCol"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="*" Name="gridRow"/>
        </Grid.RowDefinitions>
        <Menu Grid.RowSpan="2">
            <MenuItem Header="_File" Click="File_Click">
                <MenuItem Header="_Open" Click="Open_Click" />
                <MenuItem Header="_Save" Click="Save_Click" />
                <MenuItem Header="E_xit" Click="Exit_Click" />
            </MenuItem>
        </Menu>
        <Canvas Grid.Row="1">
            <RichTextBox Name="editor" AcceptsReturn ="True" Background="Black" Height="474" Width="750" Foreground="White" FontFamily="Comic Sans MS"/>
        </Canvas>
    </Grid>
</Window>
